parserImport XOCL;

import XEditor;

context XEditor
  @Operation addBrowserChildren(elementId:Integer)
    let element = xmf.getObjectWithHandle(elementId)
      in if element.isKindOf(Container)
         then 
           @For child in element.contents() do
              @TypeCase(child)
                Package do
                  Console.CONSOLE.addChild(elementId,xmf.getHandle(child),child.toString())
                end
                Class do
                  Console.CONSOLE.addChild(elementId,xmf.getHandle(child),child.toString())
                end
                Attribute do
                  Console.CONSOLE.addChild(elementId,xmf.getHandle(child),child.name() + ":" + child.type.toString())
                end
                ForeignOperation do
                  null
                end
                Operation do
                  Console.CONSOLE.addChild(elementId,xmf.getHandle(child),child.name() + "(" + child.paramNames()->separateWith(",") + ")")
                end
                else null
              end;
              if child<>null 
              then addBrowserChildren(xmf.getHandle(child))
              end
           end;
           if element.isKindOf(Class)
           then 
              @For instance in element.allInstances() do
                 Console.CONSOLE.addChild(elementId,xmf.getHandle(instance),instance.toString())
              end
           end
         end
      end
    end